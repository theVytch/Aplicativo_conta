<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corDeFundoComponente"
    tools:context=".activities.ActivityTelaSalvarListaDeContaNoCelular">


    <TextView
        android:id="@+id/textViewSobre"
        android:layout_width="370dp"
        android:layout_height="310dp"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:text="  O aplicativo precisa de permissÃ£o para escrever um arquivo Pdf onde ira informar todas as suas contas.
                        \n O arquivo pdf sera escrito na sua pasta de Download.
                        \n Caso tenha senha seu gerenciamento de arquivos o aplicativo pode ter problema para criar o arquivo."
        android:textSize="20sp"
        android:textColor="@color/black"
        android:background="@color/corDeComponenteAlerta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeletarTodasAsConta"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botao_aviso"
        android:onClick="deletarTodasContas"
        android:text="Deletar todas as contas"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSobre"
        app:layout_constraintTop_toBottomOf="@+id/textViewSobre" />

    <Button
        android:id="@+id/btnCriarPdf"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/botao_aviso"
        android:onClick="criarPdf"
        android:text="Criar PDF"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewSobre"
        app:layout_constraintTop_toBottomOf="@+id/textViewSobre" />

    <TextView
        android:id="@+id/textViewLocalSalvoPdf"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/btnCriarPdf"
        app:layout_constraintTop_toBottomOf="@+id/btnCriarPdf" />

</androidx.constraintlayout.widget.ConstraintLayout>