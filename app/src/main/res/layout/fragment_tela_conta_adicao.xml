<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewPagerAdicao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_lista_cbp"
    tools:context=".activities.FragmentTelaContaFormatoListaAdicao">


    <TextView
        android:id="@+id/textViewValorDaContaFormatoListaAdicao"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/textViewValorDaContaFormatoListaAdicao"
        android:textColor="@color/corDoTitulo"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNomeDaContaFormatoListaAdicao" />

    <EditText
        android:id="@+id/editTextValorContaFormatoListaAdicao"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/input_saldo_verde_adicao_cbp"
        android:paddingStart="15dp"
        android:ems="10"
        android:hint="R$ 0,00"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textColor="@color/yellow"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textViewValorDaContaFormatoListaAdicao"
        app:layout_constraintTop_toBottomOf="@+id/textViewValorDaContaFormatoListaAdicao" />

    <TextView
        android:id="@+id/textViewNomeDaContaFormatoListaAdicao"
        android:layout_width="322dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/textViewNomeDaContaFormatoListaAdicao"
        android:textColor="@color/corDoTitulo"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNomeDaContaFormatoListaAdicao"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_saldo_verde_adicao_cbp"
        android:paddingStart="15dp"
        android:ems="10"
        android:hint="@string/salarioTrabalho"
        android:inputType="text|textCapSentences"
        android:padding="10dp"
        android:textColor="@color/corLetraListaCbp"
        android:textColorHint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNomeDaContaFormatoListaAdicao" />

    <Button
        android:id="@+id/btnSalvarContaFormatoListaAdicao"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/botao"
        android:onClick="salvarNovaAdicaoConta"
        android:text="@string/salvar"
        android:textColor="@color/corLetraListaCbp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextValorContaFormatoListaAdicao" />
</androidx.constraintlayout.widget.ConstraintLayout>