<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Contas.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorMenu</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/minha_fonte_medium</item>

        <item name="titleTextColor">@color/yellow</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColorPrimary">@color/yellow</item>
        <item name="android:textColorSecondary">@color/corDoTitulo</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>


        <item name="colorControlNormal">@color/corLetraListaCbp</item>

        <item name="popupMenuBackground">@color/corFundoPopUp</item>


        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="actionOverflowButtonStyle">@style/ThemeOverlay</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@color/corDoTitulo</item>
        <item name="subtitleTextColor">@color/corDoTitulo</item>
        <item name="popupTheme">@style/PopupMenu</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:colorBackground">@color/corFundoPopUp</item>
        <item name="android:textColor">@color/corLetraListaCbp</item>
        <item name="android:iconTint">@color/corDoTitulo</item>
    </style>




    <style name="Threedotcolor" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/yellow</item>
    </style>

    <style name="ThemeOverlay" parent="Widget.AppCompat.PopupMenu">
        <item name="android:colorBackground">@color/corFundoPopUp</item>
        <item name="android:textColor">@color/corLetraListaCbp</item>
    </style>

    <style name="CustomContextMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:background">@color/corFundoPopUp</item>
        <item name="android:textColor">@color/corLetraListaCbp</item>
        <item name="android:iconTint">@color/corDoTitulo</item>
    </style>






    <style name="Theme.Contas.Light.AppWidgetContainerParent"
        parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Contas.Light.AppWidgetContainer"
        parent="Theme.Contas.Light.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>